<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_time_year"
    android:background="@drawable/settings_item_selector"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_height"
        android:gravity="center_vertical"
        android:id="@+id/time_year_header"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/width_0"
            android:layout_weight="@integer/weight_1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/recycler_item_margin_left"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@color/color_white"
            android:text="@string/time_year"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/settings_right_item_arrow"
            android:scaleType="center"
            android:background="@null"
            android:paddingLeft="@dimen/brightness_progress_padding"
            android:paddingRight="@dimen/brightness_progress_padding"
            android:id="@+id/time_year_arrow"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/recycler_item_margin_right_60"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/recycler_divider_line"

            android:alpha="@dimen/alpha_0_0_9"/>
        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/time_year_content"
            app:ael_duration="500"
            android:background="@drawable/brightness_bg"
            app:ael_orientation="vertical"
            android:layout_height="@dimen/width_0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/recycler_item_margin_left">
                <RelativeLayout
                    android:layout_width="@dimen/date_input_width"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/recycler_item_text_size"
                        android:textColor="@color/color_white"
                        android:gravity="center"
                        android:inputType="number"
                        android:id="@+id/time_year"
                        android:background="@null"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/date_input_line_height"
                        android:background="@color/switch_yellow_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/recycler_item_text_size"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:text="@string/year"/>

                <RelativeLayout
                    android:layout_width="@dimen/date_input_width"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/recycler_item_text_size"
                        android:textColor="@color/color_white"
                        android:gravity="center"
                        android:inputType="number"
                        android:id="@+id/time_month"
                        android:background="@null"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/date_input_line_height"
                        android:background="@color/switch_yellow_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/recycler_item_text_size"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:text="@string/month"/>
                <RelativeLayout
                    android:layout_width="@dimen/date_input_width"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/recycler_item_text_size"
                        android:textColor="@color/color_white"
                        android:gravity="center"
                        android:inputType="number"
                        android:id="@+id/time_day"
                        android:background="@null"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/date_input_line_height"
                        android:background="@color/switch_yellow_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/recycler_item_text_size"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:text="@string/day"/>

            </LinearLayout>
        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
    </FrameLayout>

</LinearLayout>